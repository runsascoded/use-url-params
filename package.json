{
  "name": "use-prms",
  "version": "0.2.0",
  "description": "Type-safe URL query parameter management with minimal, human-readable encoding",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./hash": {
      "types": "./dist/hash.d.ts",
      "import": "./dist/hash.js",
      "require": "./dist/hash.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src"
  },
  "keywords": [
    "url",
    "query",
    "params",
    "state",
    "react",
    "hooks",
    "typescript"
  ],
  "author": "Ryan Williams",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/runsascoded/use-prms"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
